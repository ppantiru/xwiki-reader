  #set($query = "${query} where doc.space='${context.macro.params.space}'")
#end
#set($prs = $services.query.xwql($query).setLimit(5).execute())
#if($prs.size() == 0)
{{warning}}
$msg.get('reader.pr.pressReviewListEmpty')
{{/warning}}
#else

{{html wiki=true}}
&lt;ul class="xlist"&gt;
  #foreach($pr in $prs)
  &lt;li class="xitem"&gt;
    &lt;img src="${xwiki.getSkinFile('icons/silk/report.gif')}" /&gt;
    [[$xwiki.getDocument($pr).displayTitle&gt;&gt;$pr]]
  &lt;/li&gt;
  #end
&lt;/ul&gt;

#if("$!{context.macro.params.allPressReviews}" != '')
