  display: block;
  font-size: .8em;
  font-style: normal;
  font-weight: 400;
  margin-bottom: .3em;
}

.xform .xErrorMsg {
  color: #CC3333;
  display: block;
  font-size: .8em;
  font-weight: normal;
  margin-bottom: .3em;
}

.xform .xErrorField {
  border: 1px solid #CC3333;
}

